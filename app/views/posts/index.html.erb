<h1>Listing posts</h1>

<%= link_to 'New post', new_post_path %>
<br />

<p>:order => "created_at DESC" </p>

<table>
  <tr>
		<th>Locale</th>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%=h post.locale %></td>
    <td><%=h post.name %></td>
    <td><%=h post.title %></td>
    <td><%=h post.content %></td>
    <td><%=h post.author %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>