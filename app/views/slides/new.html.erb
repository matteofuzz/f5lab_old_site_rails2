<h1>New slide</h1>

<%= error_messages_for :slide %>

<% form_for(@slide) do |f| %>
	<p>
  	<b>Sequence ('default' is the default)</b><br />
  	<%= f.text_field :sequence %>
	</p>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Text</b><br />
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', slides_path %>
