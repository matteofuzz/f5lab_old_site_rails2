<h1>Listing slides</h1>

<p> Ajax scripts:
<%= link_to_remote "Reload Horoscopes",
        :update => "ajax_message",
        :position => 'top',
        :url => {:controller => 'slides', :action => 'reload_horoscopes' } %>
<%= link_to_remote "Redraw all slides",
        :update => "ajax_message",
        :position => 'top',
        :url => {:controller => 'slides', :action => 'reload_all' } %>
</p>
<div id="ajax_message"></div>
<br />

<table>
  <tr>
    <th>Sequence</th>
    <th>Title</th>
    <th>Text</th>
    <th>Image path</th>
  </tr>

<% for slide in @slides %>
  <tr>
    <td><%=h slide.sequence %></td>
    <td><%=h slide.title %></td>
    <td><%=h truncate(slide.text, 60) %></td>
    <td><%=h slide.image_path %></td>
    <td><%= link_to 'Show', slide %></td>
    <td><%= link_to 'Edit', edit_slide_path(slide) %></td>
    <td><%= link_to 'Destroy', slide, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New slide', new_slide_path %>
